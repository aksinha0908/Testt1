{
  "git": {
    "commitMessage": "chore(master): release ${version}"
  },
  "gitlab": {
    "release": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "header": "# Changelog",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug fixes"
          },
          {
            "type": "docs",
            "section": "Documentation"
          },
          {
            "type": "refactor",
            "section": "Other changes"
          },
          {
            "type": "chore",
            "section": "Other changes"
          },
          {
            "type": "ci",
            "section": "Other changes"
          },
          {}
        ]
      }
    }
  }
}
